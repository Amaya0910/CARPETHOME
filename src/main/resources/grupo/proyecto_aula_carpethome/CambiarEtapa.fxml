<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="grupo.proyecto_aula_carpethome.controllers.CambiarEtapaController"
      style="-fx-background-color: white;
             -fx-background-radius: 20;
             -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 20, 0, 0, 5);"
      spacing="0"
      maxWidth="600"
      prefWidth="600"
      maxHeight="700">

    <!-- ENCABEZADO -->
    <HBox alignment="CENTER_LEFT"
          style="-fx-background-color: #61564A;
                 -fx-background-radius: 20 20 0 0;
                 -fx-padding: 24 30;">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="ðŸ“‹ Cambiar Etapa"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: 700;
                          -fx-text-fill: white;
                          -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
            <Label text="Actualiza la etapa de producciÃ³n de la prenda"
                   style="-fx-font-size: 13px;
                          -fx-text-fill: #E4DFD7;
                          -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
        </VBox>

        <Button fx:id="btnCerrar"
                text="âœ•"
                onAction="#handleCerrar"
                style="-fx-background-color: transparent;
                       -fx-text-fill: white;
                       -fx-font-size: 24px;
                       -fx-font-weight: 700;
                       -fx-cursor: hand;
                       -fx-padding: 0;
                       -fx-min-width: 30;
                       -fx-min-height: 30;"/>
    </HBox>

    <!-- CONTENIDO CON SCROLL -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                style="-fx-background-color: white; -fx-background: white;"
                hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">

        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- INFORMACIÃ“N DE LA PRENDA -->
            <VBox spacing="8">
                <Label text="Prenda"
                       style="-fx-font-size: 12px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #666;
                              -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                <Label fx:id="lblPrenda" text="Cargando..."
                       style="-fx-font-size: 16px;
                              -fx-font-weight: 700;
                              -fx-text-fill: #181716;
                              -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
            </VBox>

            <Separator style="-fx-background-color: #E4DFD7;"/>

            <!-- ETAPA ACTUAL -->
            <VBox fx:id="containerEtapaActual" spacing="12"
                  style="-fx-background-color: #F5F5F5;
                         -fx-background-radius: 10;
                         -fx-padding: 20;">

                <Label text="Etapa Actual"
                       style="-fx-font-size: 13px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #61564A;
                              -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>

                <HBox spacing="15" alignment="TOP_LEFT">
                    <!-- Imagen de la etapa actual -->
                    <VBox spacing="5" alignment="CENTER">
                        <StackPane style="-fx-background-color: white;
                                          -fx-background-radius: 8;
                                          -fx-padding: 8;
                                          -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 6, 0, 0, 2);">
                            <ImageView fx:id="imgEtapaActual"
                                       fitWidth="120" fitHeight="120"
                                       preserveRatio="true" smooth="true"/>
                        </StackPane>
                        <Label fx:id="lblDescripcionImagenActual" text="Sin imagen"
                               wrapText="true" maxWidth="120" textAlignment="CENTER"
                               style="-fx-font-size: 10px;
                                      -fx-text-fill: #757575;"/>
                    </VBox>

                    <!-- Info de etapa actual -->
                    <VBox spacing="8" VBox.vgrow="ALWAYS">
                        <Label fx:id="lblEtapaActual" text="Cargando..."
                               style="-fx-font-size: 16px;
                                      -fx-font-weight: 700;
                                      -fx-text-fill: #181716;
                                      -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                        <Label fx:id="lblDescripcionEtapaActual" text=""
                               wrapText="true"
                               style="-fx-font-size: 12px;
                                      -fx-text-fill: #666;"/>
                    </VBox>
                </HBox>
            </VBox>

            <Separator style="-fx-background-color: #E4DFD7;"/>

            <!-- NUEVA ETAPA -->
            <VBox spacing="10">
                <Label text="Nueva Etapa *"
                       style="-fx-font-size: 14px;
                              -fx-font-weight: 700;
                              -fx-text-fill: #181716;
                              -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                <ComboBox fx:id="comboNuevaEtapa"
                          maxWidth="Infinity"
                          promptText="Seleccione una etapa"
                          style="-fx-background-color: #F5F5F5;
                                 -fx-background-radius: 10;
                                 -fx-border-color: transparent;
                                 -fx-border-radius: 10;
                                 -fx-padding: 12 16;
                                 -fx-font-size: 14px;
                                 -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                <Label fx:id="lblDescripcionNuevaEtapa" text=""
                       wrapText="true"
                       style="-fx-font-size: 11px;
                              -fx-text-fill: #757575;
                              -fx-font-style: italic;"/>
            </VBox>

            <!-- OBSERVACIONES DE CIERRE -->
            <VBox spacing="10">
                <Label text="Observaciones de Cierre *"
                       style="-fx-font-size: 14px;
                              -fx-font-weight: 700;
                              -fx-text-fill: #181716;
                              -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                <TextArea fx:id="txtObservaciones"
                          promptText="Ingrese observaciones sobre el cierre de la etapa actual..."
                          wrapText="true"
                          prefRowCount="3"
                          style="-fx-background-color: #F5F5F5;
                                 -fx-background-radius: 10;
                                 -fx-border-color: transparent;
                                 -fx-border-radius: 10;
                                 -fx-padding: 12 16;
                                 -fx-font-size: 13px;
                                 -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                <Label text="* Requerido al cambiar de etapa"
                       style="-fx-font-size: 10px;
                              -fx-text-fill: #D32F2F;"/>
            </VBox>

            <!-- SECCIÃ“N DE IMAGEN PARA NUEVA ETAPA -->
            <VBox spacing="12"
                  style="-fx-background-color: #E3F2FD;
                         -fx-background-radius: 10;
                         -fx-padding: 20;">

                <Label text="ðŸ–¼ï¸ Imagen de Referencia (Opcional)"
                       style="-fx-font-size: 13px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #1565C0;
                              -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>

                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Button fx:id="btnSeleccionarImagen"
                            text="ðŸ“ Seleccionar"
                            onAction="#handleSeleccionarImagen"
                            style="-fx-background-color: #61564A;
                                   -fx-text-fill: white;
                                   -fx-font-size: 12px;
                                   -fx-font-weight: 600;
                                   -fx-background-radius: 8;
                                   -fx-padding: 10 20;
                                   -fx-cursor: hand;
                                   -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 6, 0, 0, 2);"/>

                    <VBox spacing="3" HBox.hgrow="ALWAYS">
                        <Label fx:id="lblNombreArchivo"
                               text="No se ha seleccionado ninguna imagen"
                               style="-fx-font-size: 11px;
                                      -fx-text-fill: #666;"/>
                        <Label text="Formatos: JPG, PNG, GIF | MÃ¡x: 5MB"
                               style="-fx-font-size: 9px;
                                      -fx-text-fill: #999;"/>
                    </VBox>

                    <Button fx:id="btnQuitarImagen"
                            text="âœ•"
                            onAction="#handleQuitarImagen"
                            visible="false"
                            style="-fx-background-color: #F44336;
                                   -fx-text-fill: white;
                                   -fx-font-size: 14px;
                                   -fx-font-weight: 700;
                                   -fx-background-radius: 50%;
                                   -fx-min-width: 28;
                                   -fx-min-height: 28;
                                   -fx-cursor: hand;"/>
                </HBox>

                <!-- Preview de imagen -->
                <VBox spacing="8" alignment="CENTER">
                    <StackPane style="-fx-background-color: white;
                                      -fx-background-radius: 8;
                                      -fx-padding: 8;">
                        <ImageView fx:id="imgPreview"
                                   fitWidth="180" fitHeight="180"
                                   preserveRatio="true" smooth="true"/>
                    </StackPane>
                </VBox>

                <!-- DescripciÃ³n de imagen -->
                <VBox spacing="8">
                    <Label text="DescripciÃ³n de la Imagen"
                           style="-fx-font-size: 11px;
                                  -fx-font-weight: 600;
                                  -fx-text-fill: #1565C0;"/>
                    <TextField fx:id="txtDescripcionImagen"
                               promptText="Ej: PatrÃ³n base de corte..."
                               style="-fx-background-color: white;
                                      -fx-background-radius: 8;
                                      -fx-border-color: #BBDEFB;
                                      -fx-border-radius: 8;
                                      -fx-padding: 10 14;
                                      -fx-font-size: 12px;"/>
                </VBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <!-- BOTONES DE ACCIÃ“N -->
    <HBox spacing="15"
          alignment="CENTER_RIGHT"
          style="-fx-padding: 20 30 30 30;
                 -fx-background-color: white;
                 -fx-background-radius: 0 0 20 20;">

        <Button text="Cancelar"
                onAction="#handleCerrar"
                style="-fx-background-color: #E4DFD7;
                       -fx-text-fill: #61564A;
                       -fx-font-size: 14px;
                       -fx-font-weight: 600;
                       -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
                       -fx-background-radius: 10;
                       -fx-cursor: hand;
                       -fx-padding: 12 32;
                       -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 6, 0, 0, 2);"/>

        <Button fx:id="btnConfirmar"
                text="âœ“ Confirmar Cambio"
                onAction="#handleConfirmar"
                style="-fx-background-color: #61564A;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-font-weight: 600;
                       -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
                       -fx-background-radius: 10;
                       -fx-cursor: hand;
                       -fx-padding: 12 32;
                       -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 8, 0, 0, 2);"/>
    </HBox>

</VBox>