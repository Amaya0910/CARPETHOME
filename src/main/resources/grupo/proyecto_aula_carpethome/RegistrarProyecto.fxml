<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="grupo.proyecto_aula_carpethome.controllers.RegistrarProyectoController"
      style="-fx-background-color: white;
             -fx-background-radius: 16;
             -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.25), 20, 0, 0, 4);"
      spacing="0"
      maxWidth="600"
      prefWidth="600">

    <!-- ENCABEZADO -->
    <HBox alignment="CENTER_LEFT"
          style="-fx-background-color: #E4DFD7;
                 -fx-background-radius: 16 16 0 0;
                 -fx-padding: 25 30;">
        <Label text="Nuevo Proyecto"
               style="-fx-font-size: 24px;
                      -fx-font-weight: 700;
                      -fx-text-fill: #181716;
                      -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="btnCerrar"
                text="✕"
                onAction="#handleCancelar"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #61564A;
                       -fx-font-size: 24px;
                       -fx-cursor: hand;
                       -fx-padding: 0;
                       -fx-min-width: 30;
                       -fx-min-height: 30;"/>
    </HBox>

    <!-- MENSAJE DE ERROR -->
    <VBox fx:id="errorContainer"
          managed="false"
          visible="false"
          style="-fx-padding: 20 30 0 30;">
        <Label fx:id="errorLabel"
               wrapText="true"
               alignment="CENTER"
               style="-fx-text-fill: #D32F2F;
                      -fx-font-size: 13px;
                      -fx-font-weight: 500;
                      -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
                      -fx-padding: 10 15;
                      -fx-background-color: rgba(211, 47, 47, 0.1);
                      -fx-background-radius: 8;
                      -fx-text-alignment: center;"/>
    </VBox>

    <!-- FORMULARIO -->
    <ScrollPane fitToWidth="true"
                style="-fx-background-color: transparent;
                       -fx-background: transparent;"
                VBox.vgrow="ALWAYS">
        <VBox spacing="20" style="-fx-padding: 25 30;">

            <!-- NOMBRE DEL PROYECTO -->
            <VBox spacing="8">
                <Label text="Nombre del Proyecto *"
                       style="-fx-font-size: 13px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #181716;
                              -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                <TextField fx:id="txtNombre"
                           promptText="Ej: Vestido de Gala"
                           style="-fx-background-color: #F5F5F5;
                                 -fx-background-radius: 8;
                                 -fx-border-width: 0;
                                 -fx-font-size: 14px;
                                 -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
                                 -fx-text-fill: #181716;
                                 -fx-prompt-text-fill: #A59B8F;
                                 -fx-padding: 12 16;"/>
            </VBox>

            <!-- CÉDULA DEL CLIENTE -->
            <VBox spacing="8">
                <Label text="Cédula del Cliente *"
                       style="-fx-font-size: 13px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #181716;
                              -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                <TextField fx:id="txtCedulaCliente"
                           promptText="Ej: 1234567890"
                           style="-fx-background-color: #F5F5F5;
                                 -fx-background-radius: 8;
                                 -fx-border-width: 0;
                                 -fx-font-size: 14px;
                                 -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
                                 -fx-text-fill: #181716;
                                 -fx-prompt-text-fill: #A59B8F;
                                 -fx-padding: 12 16;"/>
            </VBox>

            <!-- TIPO DE PRODUCCIÓN -->
            <VBox spacing="8">
                <Label text="Tipo de Producción *"
                       style="-fx-font-size: 13px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #181716;
                              -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                <ComboBox fx:id="comboTipoProduccion"
                          promptText="Selecciona un tipo"
                          maxWidth="Infinity"
                          style="-fx-background-color: #F5F5F5;
                                -fx-background-radius: 8;
                                -fx-font-size: 14px;
                                -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
            </VBox>

            <!-- FECHAS EN FILA -->
            <HBox spacing="15">
                <!-- FECHA DE INICIO -->
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label text="Fecha de Inicio *"
                           style="-fx-font-size: 13px;
                                  -fx-font-weight: 600;
                                  -fx-text-fill: #181716;
                                  -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                    <DatePicker fx:id="dateFechaInicio"
                                promptText="Selecciona fecha"
                                maxWidth="Infinity"
                                style="-fx-background-color: #F5F5F5;
                                      -fx-background-radius: 8;
                                      -fx-font-size: 14px;
                                      -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                </VBox>

                <!-- FECHA DE ENTREGA ESTIMADA -->
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label text="Entrega Estimada *"
                           style="-fx-font-size: 13px;
                                  -fx-font-weight: 600;
                                  -fx-text-fill: #181716;
                                  -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                    <DatePicker fx:id="dateFechaEntregaEstimada"
                                promptText="Selecciona fecha"
                                maxWidth="Infinity"
                                style="-fx-background-color: #F5F5F5;
                                      -fx-background-radius: 8;
                                      -fx-font-size: 14px;
                                      -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                </VBox>
            </HBox>

            <!-- COSTO ESTIMADO -->
            <VBox spacing="8">
                <Label text="Costo Estimado *"
                       style="-fx-font-size: 13px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #181716;
                              -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
                <TextField fx:id="txtCostoEstimado"
                           promptText="Ej: 150000"
                           style="-fx-background-color: #F5F5F5;
                                 -fx-background-radius: 8;
                                 -fx-border-width: 0;
                                 -fx-font-size: 14px;
                                 -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
                                 -fx-text-fill: #181716;
                                 -fx-prompt-text-fill: #A59B8F;
                                 -fx-padding: 12 16;"/>
            </VBox>

            <!-- NOTA DE CAMPOS OBLIGATORIOS -->
            <Label text="* Campos obligatorios"
                   style="-fx-font-size: 12px;
                          -fx-text-fill: #A59B8F;
                          -fx-font-style: italic;
                          -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>

        </VBox>
    </ScrollPane>

    <!-- BOTONES DE ACCIÓN -->
    <HBox spacing="12"
          alignment="CENTER_RIGHT"
          style="-fx-padding: 20 30 25 30;
                 -fx-background-color: white;
                 -fx-background-radius: 0 0 16 16;">

        <Button fx:id="btnCancelar"
                text="Cancelar"
                onAction="#handleCancelar"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #61564A;
                       -fx-font-size: 14px;
                       -fx-font-weight: 600;
                       -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
                       -fx-background-radius: 8;
                       -fx-cursor: hand;
                       -fx-padding: 12 24;
                       -fx-border-color: #A59B8F;
                       -fx-border-width: 1.5;
                       -fx-border-radius: 8;"
                onMouseEntered="#handleCancelarHover"
                onMouseExited="#handleCancelarExit"/>

        <Button fx:id="btnGuardar"
                text="Guardar Proyecto"
                onAction="#handleGuardar"
                style="-fx-background-color: #61564A;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-font-weight: 600;
                       -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
                       -fx-background-radius: 8;
                       -fx-cursor: hand;
                       -fx-padding: 12 32;
                       -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 8, 0, 0, 2);"
                onMouseEntered="#handleGuardarHover"
                onMouseExited="#handleGuardarExit"/>
    </HBox>

</VBox>
