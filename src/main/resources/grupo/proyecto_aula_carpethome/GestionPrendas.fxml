            <Label fx:id="lblProyecto" text="Proyecto: PRJ-001"
                   style="-fx-font-size: 14px;
                          -fx-text-fill: #61564A;
                          -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;"/>
        </VBox>

        <Button fx:id="btnAgregarPrenda"
                text="+ Agregar Prenda"
                onAction="#handleAgregarPrenda"
                style="-fx-background-color: #61564A;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-font-weight: 600;
                       -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
                       -fx-background-radius: 8;
                       -fx-cursor: hand;
                       -fx-padding: 12 24;
                       -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 8, 0, 0, 2);"
