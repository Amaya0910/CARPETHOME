                       -fx-padding: 0;
                       -fx-min-width: 30;
                       -fx-min-height: 30;"/>
    </HBox>

    <!-- CONTENEDOR DE PRENDAS -->
    <ScrollPane fitToWidth="true"
                style="-fx-background-color: transparent;
                       -fx-background: transparent;"
                VBox.vgrow="ALWAYS">
        <VBox fx:id="contenedorPrendas"
              spacing="15"
              style="-fx-padding: 30;">

            <!-- Las tarjetas de prendas se agregarÃ¡n dinÃ¡micamente aquÃ­ -->

